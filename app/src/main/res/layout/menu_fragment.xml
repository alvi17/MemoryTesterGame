<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/start_game_button_lights"
        android:layout_width="@dimen/start_game_button_lights"
       	android:layout_height="@dimen/start_game_button_lights"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/button_start_lights"/>
    
    <ImageView
        android:id="@+id/start_game_button"
        android:layout_width="@dimen/start_game_button"
        android:layout_height="@dimen/start_game_button"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/button_start"
        android:layout_alignTop="@+id/start_game_button_lights"
        android:layout_alignStart="@+id/start_game_button_lights" />

    <ImageView
        android:id="@+id/settings_game_button"
        android:layout_width="@dimen/settings_game_button"
        android:layout_height="@dimen/settings_game_button"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/button_settings"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@+id/start_game_button_lights"
        android:layout_toEndOf="@+id/start_game_button" />

    <ImageView
        android:id="@+id/google_play_button"
        android:layout_width="@dimen/settings_game_button"
        android:layout_height="@dimen/settings_game_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/settings_game_button_margin"
        android:layout_toLeftOf="@id/start_game_button"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/button_google_play" />

	<ImageView
        android:id="@+id/title"
        android:layout_width="@dimen/title_width"
        android:layout_height="@dimen/title_height"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/title"
        android:layout_marginEnd="84dp"
        android:layout_above="@+id/tooltip"
        android:layout_alignParentEnd="true" />
	
	<ImageView
        android:id="@+id/tooltip"
        android:layout_width="@dimen/tooltip_width"
        android:layout_height="@dimen/tooltip_height"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/tooltip_margin_left"
        android:scaleType="centerCrop"
        android:src="@drawable/tooltip_play"
        android:layout_marginBottom="85dp"
        android:layout_alignBottom="@+id/start_game_button"
        android:layout_alignEnd="@+id/start_game_button_lights" />
</RelativeLayout>